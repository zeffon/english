{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "strict": true,
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_module", "build"]
}
